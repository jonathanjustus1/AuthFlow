rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read, create, and update their own user document.
    // They cannot delete their own document or access others' documents.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.keys().hasAll(['firstName', 'lastName', 'email', 'providerId', 'accountCreationTime', 'lastSignInTime'])
                    && request.resource.data.firstName is string
                    && request.resource.data.lastName is string
                    && request.resource.data.email is string
                    && request.resource.data.providerId is string
                    && request.resource.data.accountCreationTime is timestamp
                    && request.resource.data.lastSignInTime is timestamp;

      // Allow updating with dateOfBirth
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.dateOfBirth is timestamp;
    }
  }
}
